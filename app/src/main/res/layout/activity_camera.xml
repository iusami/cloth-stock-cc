<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.camera.CameraActivity">

    <!-- カメラプレビュー -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutCameraControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scaleType="fillCenter" />

    <!-- カメラコントロール -->
    <LinearLayout
        android:id="@+id/layoutCameraControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 戻るボタン -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBack"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="32dp"
            android:contentDescription="@string/button_back"
            app:icon="@drawable/ic_arrow_back_24"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:iconTint="@android:color/white"
            app:strokeColor="@android:color/white"
            app:strokeWidth="2dp" />

        <!-- 撮影ボタン -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonCapture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="@string/button_capture"
            android:src="@drawable/ic_camera_24"
            app:backgroundTint="?attr/colorPrimary"
            app:fabSize="auto"
            app:maxImageSize="32dp"
            app:tint="@android:color/white" />

        <!-- スペーサー（左右対称のレイアウトのため） -->
        <View
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="32dp" />

    </LinearLayout>

    <!-- 写真確認画面（初期は非表示） -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPhotoConfirmation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 撮影された写真 -->
        <ImageView
            android:id="@+id/imageViewCaptured"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/captured_photo"
            app:layout_constraintBottom_toTopOf="@+id/layoutConfirmationControls"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 確認画面コントロール -->
        <LinearLayout
            android:id="@+id/layoutConfirmationControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            android:gravity="center"
            android:background="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- 再撮影ボタン -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRetake"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:text="@string/button_retake"
                android:textColor="@android:color/white"
                app:strokeColor="@android:color/white" />

            <!-- 保存ボタン -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSave"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="@string/button_save"
                app:backgroundTint="?attr/colorPrimary" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>